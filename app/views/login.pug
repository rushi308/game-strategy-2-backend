extends header 
block content
        doctype html
        head
          link(rel='stylesheet' href='views/css/main.css')
        .row
          form(action='/authenticate' method='POST')#login.form
            h1.form__title GAME STRATEGY
            .form__message.form__message--error
            .form__input-group
              input.form__input(type='email' name='email' autofocus='' placeholder='Email')
              .form__input-error-message
            .form__input-group
              input.form__input(type='password' name='password' autofocus='' placeholder='Password')
              .form__input-error-message
            button.form__button(type='submit') Login
            p
              a.form__link(href='forgotpwd') Forgot your password?
            p
              a#linkCreateAccount.form__link(href='./') Don&apos;t have an account? Create account
          form(action='/auth_reg' method='POST')#createAccount.form.form--hidden
            h1.form__title Create Account
            .form__message.form__message--error
            .form__input-group
              input#signupUsername.form__input(type='text' name='uname' autofocus='' placeholder='Username')
              .form__input-error-message
            .form__input-group
              input.form__input(type='text' id='First Name' name='fname' autofocus='' placeholder='First Name')
              .form__input-error-message
            .form__input-group
              input.form__input(type='text' id='Last Name' name='lname' autofocus='' placeholder='Last Name')
              .form__input-error-message
            .form__input-group
              input.form__input(type='email' name='email' autofocus='' placeholder='Email Address')
              .form__input-error-message
            .form__input-group
              input.form__input(type='text' name= 'mno' id='Mobile No' autofocus='' placeholder='Mobile No +44')
              .form__input-error-message
            .form__input-group
              input.form__input(type='password' name='password' autofocus='' placeholder='Password')
              .form__input-error-message
            .form__input-group
              input.form__input(type='password' name='cpassword' autofocus='' placeholder='Confirm password')
              .form__input-error-message
            button.form__button(type='submit') Continue
            p
              a#linkLogin.form__link(href='./') Already have an account? Sign in
        script(src='views/js/main.js')
